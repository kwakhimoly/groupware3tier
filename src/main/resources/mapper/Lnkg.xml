<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<!-- 
    [템플릿 설명]  
    - 해당 파일은 SQL 문을 작성하는 곳입니다.
-->
<mapper namespace="Lnkg">

    <select id="Lnkg_getList" parameterType="LnkgDto" resultType="LnkgDto">
        SELECT hobby_id, 
        	   user_id
		FROM public.lnkg_hobby
    </select>
	<insert id="Lnkg_insert" parameterType="LnkgDto">
		INSERT INTO public.lnkg_hobby(
				user_id, 
				user_nm, 
				user_dept_se_no, 
				user_eml_addr, 
				user_telno, 
				user_addr)
		VALUES (
				#{user_id}, 
				#{user_nm}, 
				#{user_dept_se_no}, 
				#{user_eml_addr}, 
				#{user_telno}, 
				#{user_addr})
	</insert>

</mapper>